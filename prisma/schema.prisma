generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String    @id @default(cuid(2))
  firstName    String    @map("first_name")
  lastName     String    @map("last_name")
  email        String    @unique
  passwordHash String    @map("password_hash")
  confirmedAt  DateTime? @map("confirmed_at")
  discoverable Boolean   @default(false)

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz()
  deletedAt DateTime? @map("deleted_at") @db.Timestamptz()

  sessions        Session[]
  documents       Document[]
  documentUpdates DocumentUpdate[]
  documentUsers   DocumentUser[]
  screens         Screen[]

  @@map("user")
}

model Session {
  id        String   @id @default(cuid(2))
  userId    String   @map("user_id")
  expiresAt DateTime @map("created_at")

  user User @relation(fields: [userId], references: [id])

  @@map("session")
}

model Document {
  id             String  @id @default(cuid(2))
  userId         String  @map("user_id")
  name           String
  type           String
  baseDocumentId String?
  isPublic       Boolean @default(false)
  meta           Json

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz()
  deletedAt DateTime? @map("deleted_at") @db.Timestamptz()

  user            User             @relation(fields: [userId], references: [id])
  baseDocument    Document?        @relation("baseDocument", fields: [baseDocumentId], references: [id])
  childDocuments  Document[]       @relation("baseDocument") @ignore
  documentUpdates DocumentUpdate[]
  documentUsers   DocumentUser[]

  @@map("document")
}

model DocumentUpdate {
  id         String @id @default(cuid(2))
  documentId String @map("document_id")
  userId     String @map("user_id")
  update     Bytes

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz()
  deletedAt DateTime? @map("deleted_at") @db.Timestamptz()

  document Document @relation(fields: [documentId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@map("document_update")
}

model DocumentUser {
  id         String  @id @default(cuid(2))
  documentId String  @map("document_id")
  userId     String  @map("user_id")
  canWrite   Boolean @default(false)

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz()
  deletedAt DateTime? @map("deleted_at") @db.Timestamptz()

  document Document @relation(fields: [documentId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@map("document_user")
}

model Screen {
  id     String  @id @default(cuid(2))
  userId String  @map("user_id")
  name   String
  slug   String? @unique

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz()
  deletedAt DateTime? @map("deleted_at") @db.Timestamptz()

  user User @relation(fields: [userId], references: [id])

  @@map("screen")
}

model EmailVerification {
  id           String   @id @default(cuid(2))
  firstName    String   @map("first_name")
  lastName     String   @map("last_name")
  email        String   @unique
  passwordHash String   @map("password_hash")
  token        String   @unique
  expiresAt    DateTime @map("expires_at") @db.Timestamptz()

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz()

  @@map("email_verification")
}

model PasswordReset {
  id        String   @id @default(cuid(2))
  email     String   @unique
  token     String   @unique
  expiresAt DateTime @map("expires_at") @db.Timestamptz()

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz()

  @@map("password_reset")
}
